
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    // Rules for events
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;
      // Only signed-in users (admins) can create, update, or delete events
      allow write: if isSignedIn();
    }

    // Rules for registrations
    match /registrations/{registrationId} {
      // Anyone can create a registration
      allow create: if true;

      // Only signed-in users (admins) can read/update registrations.
      // Or the user who owns the registration can read it.
      allow read, update: if isSignedIn() || resource.data.studentEmail == request.auth.token.email;
      
      // Only admins can delete
      allow delete: if isSignedIn();
    }
  }
}
